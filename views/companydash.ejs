<html>

<% if (company) { %>

<head>
	<h1> Company Dashboard </h1>
	<h3><strong>Name: </strong><%= company.name %></h3>
	<h3><strong>Email: </strong><%= company.email %></h3>
</head>
<body>
	<a href="/">Home</a><br>
	<a href="/logout">Log out</a>

	<!-- Start a request -->
	<form action="/companyopentransaction" method="post">
		<input type="text" name="transaction_amount" placeholder="Transaction Amount" required="">
		<label for="teacher"> Sponsor (<%= teacher_names.length %>):</label>
		<select id="teacher" name="teacher">
		<% for (var i=0; i < teacher_names.length; i++ ) { %>
			<option value=<%= teacher_names[i].id %>><%= teacher_names[i].name %></option>
		<% } %>
		</select>
		<div>
			<input type="submit" value="Send request">
		</div>
	</form>

	<div>
		<h3>Open Transactions (<%=open_transactions.length%>)</h3>
		<% for (var i=0; i < open_transactions.length; i++ ) { %>
			<% var ot = open_transactions[i]; %>
			<span>[<%=i%>] Date Requested: <%=ot.date_requested.toString()%> --> From: <%=ot.company_name%>. To: <%=ot.teacher_name%>. Amount: <%=ot.amount%></span>
			<% if (ot.requester == 'company') { %>
				<form action="/deleteopentransaction" method="post" style="display:inline!important">
					<input type="hidden" name="delete_id" value=<%=ot._id%>>
					<input type="submit" value="Cancel request" style="color:red"> 
				</form>
			<% } else { %>
				<form action="/approveopentransaction" method="post" style="display:inline!important">
					<input type="hidden" name="approve_id" value=<%=ot._id%>>
					<input type="submit" value="Approve request" style="color:green"> 
				</form>
			<% } %>
			<br>
		<% } %>
	</div>

</body>

<% } else { %>

<head>
	<h1>You are not logged in.</h1>
	<a href="/">Home</a><br>
	<a href="/companyreglog">Company Login</a>
</head>

<% } %>

</html>